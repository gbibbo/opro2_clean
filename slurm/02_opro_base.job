#!/bin/bash
#SBATCH --job-name=02_opro_base
#SBATCH --partition=debug
#SBATCH --gpus=1
#SBATCH --cpus-per-task=8
#SBATCH --mem=48G
#SBATCH --time=03:59:00
#SBATCH --output=/mnt/fast/nobackup/users/gb0048/opro2_clean/logs/02_opro_base_%j.out
#SBATCH --error=/mnt/fast/nobackup/users/gb0048/opro2_clean/logs/02_opro_base_%j.err

# =============================================================================
# ETAPA 4: OPRO on BASE model (no LoRA)
# =============================================================================
# Optimizes prompts using OPRO algorithm on the base Qwen2-Audio model
# =============================================================================

set -euo pipefail
set -x

REPO_CLEAN="/mnt/fast/nobackup/users/gb0048/opro2_clean"
REPO_DATA="/mnt/fast/nobackup/users/gb0048/opro2"
CONTAINER="$REPO_DATA/qwen_pipeline_v2.sif"
SEED="${1:-42}"

echo "[INFO] Start: $(date)"
nvidia-smi --query-gpu=name,memory.total --format=csv
cd "$REPO_CLEAN"

export HF_HOME="/mnt/fast/nobackup/users/gb0048/.cache/huggingface"
export TRANSFORMERS_CACHE="$HF_HOME/transformers"
export HF_HUB_CACHE="$HF_HOME/hub"
mkdir -p "$HF_HOME" "$TRANSFORMERS_CACHE" "$HF_HUB_CACHE"
mkdir -p logs

export PYTORCH_CUDA_ALLOC_CONF="expandable_segments:True"

# Manifest from original repo
MANIFEST="$REPO_DATA/data/processed/conditions_final/conditions_manifest_split.parquet"

if [ ! -f "$MANIFEST" ]; then
    echo "[ERROR] Manifest not found: $MANIFEST"
    exit 1
fi

echo "[RUN] OPRO Classic on BASE model (Etapa 4)"
apptainer exec --nv \
  --pwd "$REPO_CLEAN" \
  --env HF_HOME="$HF_HOME" \
  --env TRANSFORMERS_CACHE="$TRANSFORMERS_CACHE" \
  --env HF_HUB_CACHE="$HF_HUB_CACHE" \
  --env PYTORCH_CUDA_ALLOC_CONF="expandable_segments:True" \
  "$CONTAINER" python3 scripts/opro_classic_optimize.py \
  --manifest "$MANIFEST" \
  --split dev \
  --output_dir "results/opro_base_seed${SEED}" \
  --no_lora \
  --optimizer_llm Qwen/Qwen2.5-7B-Instruct \
  --num_iterations 30 \
  --candidates_per_iter 3 \
  --early_stopping 5 \
  --seed "$SEED"

echo "[DONE] End: $(date)"
echo "Results: results/opro_base_seed${SEED}/"
cat "results/opro_base_seed${SEED}/best_prompt.txt"
